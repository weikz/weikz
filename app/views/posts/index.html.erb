<div class="blog-index">
  <!-- main post list -->
  <% @posts.each do |post| %>
    <article>
      <header class="entry-header">
        <h2 class="title">
          <%= link_to(post.title, post_path(post)) %>
        </h2>
      </header>
      <div class="entry-content">
        <%= markdown(post.content) %>
      </div>
    </article>
    <footer class="entry-footer">
      <% if !post.all_tags.blank? %>
        <div class="tags"><%=raw post.all_tags %></div>
      <% end %>
      <div class="more-link">
        <%= link_to("(繼續閱讀...)", post_path(post))%>
      </div>
    </footer>
  <% end %>
  <!-- end main post list -->
</div>
